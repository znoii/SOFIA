<Window x:Class="SportSofia.Windows.AddInventoryWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        mc:Ignorable="d"
        Title="Add Inventory" 
        WindowStartupLocation="CenterOwner"
        Height="400" Width="400">
    <Grid Margin="10">
        <StackPanel>
            <Label Content="Add New Inventory" FontSize="16" FontWeight="Bold"/>

            <Label Content="Inventory Number:"/>
            <TextBox x:Name="InventoryNumberTextBox" Margin="0,0,0,10"/>

            <Label Content="Name:"/>
            <TextBox x:Name="NameTextBox" Margin="0,0,0,10"/>

            <Label Content="Type:"/>
            <TextBox x:Name="TypeTextBox" Margin="0,0,0,10"/>

            <Label Content="Description:"/>
            <TextBox x:Name="DescriptionTextBox" Margin="0,0,0,10" Height="60" AcceptsReturn="True"/>

            <StackPanel Orientation="Horizontal" HorizontalAlignment="Right">
                <Button Content="Cancel" Width="80" Margin="5" Click="CancelButton_Click"/>
                <Button Content="Add" Width="80" Margin="5" Click="AddButton_Click"/>
            </StackPanel>
        </StackPanel>
    </Grid>
</Window>