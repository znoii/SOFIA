<UserControl x:Class="SportSofia.Windows.LoginControl"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:SportSofia.Windows"
             mc:Ignorable="d" 
             d:DesignHeight="300" d:DesignWidth="300">
    <Grid>
        <StackPanel VerticalAlignment="Center" HorizontalAlignment="Center">
            <TextBlock Text="SportSofia" FontSize="20" FontWeight="Bold" HorizontalAlignment="Center" Margin="0,0,0,20"/>

            <TextBlock Text="Login" Margin="5"/>
            <TextBox x:Name="LoginTextBox" Width="200" Margin="5"/>

            <TextBlock Text="Password" Margin="5"/>
            <PasswordBox x:Name="PasswordBox" Width="200" Margin="5"/>

            <Button Content="Login" Width="100" Margin="10" Click="OnLoginClick"/>
            <Button Content="Register" Width="100" Margin="10" Click="OnRegistrationClick" />
        </StackPanel>
    </Grid>
</UserControl>